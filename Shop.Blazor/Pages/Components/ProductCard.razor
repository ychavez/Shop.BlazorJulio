@using Shop.Blazor.Models

<div class="col-lg-4 col-md-6 filter">
    <div class="card card-inverse card-info">
        <img class="card-img-top" src="@product.ImageURL" style="width:300px">
        <div class="card-block">

            <h4 class="card-title">@product.Name</h4>
            <div class="card-text">
                @product.Description
            </div>
        </div>
        <div class="card-footer">
            <a href="/details/@product.Id" class="btn btn-dark">Detalles</a>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Product product { get; set; } = null!;

}
